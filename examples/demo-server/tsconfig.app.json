{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "skipLibCheck": true,

    /* Colyseus requirements */
    "useDefineForClassFields": false,
    "experimentalDecorators": true,

    /* Output */
    "moduleResolution": "node",
    "rootDir": "..",
    "outDir": "./dist",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src", "../demo-shared"]
}
